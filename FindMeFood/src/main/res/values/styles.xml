<resources>

    <style name="Theme.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Place" parent="android:Widget">
    </style>

    <style name="Place.Background">
        <item name="android:background">@drawable/place_list_item_background</item>
    </style>


    <style name="Place.Title">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Place.Subtitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/place_subtitle</item>
    </style>

    <style name="Place.Distance">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableTop">@drawable/ic_action_location</item>
        <item name="android:textColor">@color/place_distance</item>
    </style>

    <style name="Place.Price">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/place_price_level</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
